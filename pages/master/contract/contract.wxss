page{
  background: #f5f5f5;
}

.head{
  margin-top: 20rpx;
  width: 690rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  background: #fff;
}
.box-h{
  width: 100%;
  margin: 15rpx 0;
}
.name{
  font-family: PingFang-SC-Regular;
	font-size: 30rpx;
	font-weight: 400;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #333333;
}
.house{
  font-family: PingFang-SC-Regular;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #999999;
}
.num{
  font-family: PingFang-SC-Regular;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #666666;
}
.price{
  font-family: PingFang-SC-Regular;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #c10000;
}
.time{
  font-family: PingFang-SC-Regular;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 1rpx;
	color: #666666;
}

.ipt{
  font-family: PingFang-SC-Regular;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 42rpx;
	letter-spacing: 0rpx;
	color: #000000;
  width: 690rpx;
  padding: 30rpx;
  min-height: 100rpx;
  background: #fff;
}
.xx{
width: 690rpx;
  padding: 30rpx;
  height: 50rpx;
  background: #fff;
}
.xx-title{
  font-family: PingFang-SC-Regular;
	font-size: 30rpx;
  font-weight: bold;
  width: 200rpx;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #333333;
}
.xx-img{
  width: 41rpx;
	height: 40rpx;
  margin-left:20rpx; 
}


.submit{
  width: 100%;
  background: #fff;
  min-height: 300rpx;
}
.btn{
  width: 690rpx;
	height: 88rpx;
	background-color: #c10000;
	border-radius: 10rpx;
  margin: 120rpx 30rpx 20rpx;
  font-family: PingFang-SC-Regular;
	font-size: 34rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #ffffff;
}
.button{
  width: 95%;
  margin: 0 auto;
  background: #E5212A;
  color: #fff;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: bold;
  border-radius: 5px;
}
.item{
  width: 95%;
  margin: 30rpx auto;
  background: #fff;
  border-radius: 5px;
 
}
.item>view{
  display: flex;
  align-items: center;
  padding: 30rpx;
}
.item>view>view{
  display: flex;
}
.item>view>view>view{
  flex: 1;
  font-size: 24rpx;
  text-align: center;
}
.sel{
  color: red;
}