<view class='page'>
<!-- 地址 -->
  <navigator url='city/city?city={{city}}' class="address row_b">
    <view class="left row_s">
      <image src='/images/address.png' class="add-img"></image>
      <view class="city">{{city}}</view>
    </view>
    <view class="qh row_c">切换城市</view>
  </navigator>

    <!-- 搜索 -->
  <navigator url='search/search' class='search row_s'>
    <image class='search-img' src='/images/search.png'></image>
    <view  class='search-ipt' placeholder='搜索' bindinput='onInput'>搜索小区</view>
  </navigator>

  <view class="hbar">
  <text class="{{hbarId==item.id?'hactive':''}}" wx:for="{{hbar}}" wx:key="{{item.id}}" bindtap="changeHId" data-id="{{item.id}}" >{{item.name}}</text>
  </view>
  <swiper indicator-dots="{{indicatorDots}}" 
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="true" style="margin-top:20rpx;text-align: center;"> 
      <swiper-item wx:for='{{bannerList}}'> 
          <image src="{{imgUrl+item.imgUrl}}" class="slide-image"/> 
      </swiper-item> 
  </swiper>
  <!-- wx:if="{{false}}" -->
  <view>
    <view class="tbox">
    
      <view class="titem" wx:for="{{productList}}">
        <navigator open-type="switchTab" url='{{item.href}}' wx:if="{{item.name=='门窗'}}">
          <image src="{{imgUrl+item.imgUrl}}"></image>
          <text>{{item.name}}</text>
        </navigator>
        <navigator url='{{item.href}}' wx:else>
          <image src="{{imgUrl+item.imgUrl}}"></image>
          <text>{{item.name}}</text>
        </navigator>
      </view>
      
    </view>
    <!-- <view  class="tbottom">
      <text class="{{(tindex-1)==item?'tactive':''}}" wx:for="{{ttotal}}" bindtap="changetIndex" data-index="{{item}}"></text>
    </view> -->
  </view>
  <view class="textImg" wx:for="{{messageList}}" wx:for-item="items">
    <text>{{items.name}}</text>
    <!-- <image src="{{imgUrl+items.imgUrl}}"></image> -->
  </view>
  <view class="sibox" wx:for="{{lcList}}" wx:for-item="items">
    <view class="sihead">
      <text class="title">铝材供应商</text>
      <text class="sitem" wx:for="{{items.mcAppSupplierBrands}}">{{item.name}}</text>
      <i class="more"></i>
    </view>
    <view>
     <swiper indicator-dots="{{indicatorDots}}" 
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="true" style="margin-top:20rpx;text-align: center;"> 
        <swiper-item wx:for='{{items.mcAppSupplierImgs}}'> 
            <image src="{{imgUrl+item.imgUrl}}" class="slide-image"/> 
        </swiper-item> 
      </swiper>
      <!-- <image src="{{imgUrl+item.imgUrl}}" wx:for="{{items.mcAppSupplierImgs}}"></image> -->
    </view>
  </view>
  <view class="paragraph"></view>
  <view class="pbox" wx:for="{{pjList}}" wx:for-item="items">
    <view class="phead">
      <text class="title">配件供应商</text>
      <text class="sitem" wx:for="{{items.mcAppSupplierBrands}}">{{item.name}}</text>
    </view>
    <view class="pimg-box">
      <image src="{{imgUrl+item.imgUrl}}" wx:for="{{items.mcAppSupplierImgs}}"></image>
    </view>
  </view>
  <view class="paragraph"></view>
  <view class="sibox" wx:for="{{azList}}" wx:for-item="items">
    <view class="sihead">
      <text class="title">专业安装公司</text>
      <text class="company">{{items.name}}</text>
    </view>
    <view>
      <image src="{{imgUrl+item.imgUrl}}" wx:for="{{items.mcAppSupplierImgs}}"></image>
    </view>
  </view>
</view>

