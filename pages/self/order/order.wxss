/* pages/self/order/order.wxss */
page{
  background: #eee;
}
.z{
  
  margin: 0 auto;
  margin-top: 60rpx;
  display: flex;
  width: 240rpx;
}
.z>view{
  font-size: 16px;
  box-sizing: border-box;
  width: 50%;
  text-align: center;
  line-height: 8px;
}
.sel{
  color: red;
}
.sel:after{
  content: '';
  display: inline-block;
  width: 50rpx;
  height: 1px;
  background: red;
  line-height: 5px;
}
.l{
  background: #fff;
  border-radius: 3px;
  overflow: hidden;
  width: 90%;
  margin: 0 auto;
  margin-top: 40rpx;
}
.l>view:first-child{
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.l>view:first-child>view:nth-child(2){
  flex: 1;
  padding-left: 10rpx;
  font-weight: bold;
}
.l>view:first-child>image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.l>view:first-child>view:nth-child(3){
  font-size: 12px;
  color: #333;
  display: flex;
  align-items: center;
}
.l>view:first-child>view:nth-child(3)::before{
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 20rpx;
  background: red;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
.l>view:nth-child(2){
  display: flex;
  align-items: center;
  height: 120rpx;
}
.l>view:nth-child(2)>view:first-child{
  font-size: 14px;
  font-weight: bold;
  flex: 1;
}
.l>view:nth-child(2)>view:last-child{
  font-size: 18px;
  font-weight:bold;
}
.l>view:nth-child(3){
  padding-top: 30rpx;
  padding-bottom:40rpx;
  color: #999;
  line-height: 60rpx;
  font-size: 12px;
}
.l>view:nth-child(4){
  padding-top: 30rpx;
  padding-bottom:30rpx;
  color: #ccc;
  line-height: 60rpx;
  font-size: 14px;
}
.l>view:nth-child(4)>text:first-child{
  font-weight: bold;
  color: #000;
}
.l>view:nth-child(4)>text:nth-child(2){
  color: red;
}
.l>view:nth-child(4)>text:nth-child(3){
  color:#999;
}
.pad{
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.red{
  color: red;
}
.bor_b{
  border-bottom: 1px dashed #eee;
}