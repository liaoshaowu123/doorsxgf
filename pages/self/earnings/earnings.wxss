}

.box-icon{
  width: 50rpx;
	height: 50rpx;
  margin-right: 18rpx;
}

.box-name{
  font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}
.infos{
  position: absolute;
  left: 0;
