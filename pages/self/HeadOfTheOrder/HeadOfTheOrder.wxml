<wxs module="filters" src="./fil.wxs"></wxs>
<view class="z">
  <view catchtap="setl" data-type='1' class="{{type==1&&'sel'}}">
    未完工订单
  </view>
  <view catchtap="setl" data-type='2' class="{{type==2&&'sel'}}">
    已完工订单
  </view>
  <view catchtap="setl" data-type='3' class="{{type==3&&'sel'}}">
    区域保护订单
  </view>
</view>
<view class="l" wx:for="{{list}}">
  <view class="pad bor_b">
    <image src="{{imgUrl}}{{item.userPhoto}}"></image>
    <view style="text-overflow: ellipsis;overflow: hidden;white-space: nowrap;">{{item.userName}}</view>
    <view> {{item.plotName}}{{item.houseNo}}</view>
  </view>
  <view class="pad bor_b">
    <view>订单状态： <text>{{item.statuss}}</text></view>
    <view catchtap="qxOrder" data-id="{{item.id}}" style="{{type!=1&&'display:none'}}" wx:if="{{item.qx && item.orderStatus != 14}}">取消订单</view>
  </view>
  <view class="pad bor_b">
    <view>
      <view>订单编号 : {{item.orderNo}}</view>
      <view>
      已支付:
      <text style="font-weight: bold;color: #333;margin-right:20rpx;">{{item.paid||0}}元</text>
      未支付
      <text style="font-weight: bold;color: red;">{{ filters.toFix(item.money - item.paid)}}元</text>
      </view>
      <view >下单时间 : {{item.createDate}}  </view>
      <view >复尺时间 : {{item.amountTime}}  </view>
    </view>
    <view>
      <navigator url="/pages/order/orderinfo/orderinfo?id={{item.id}}" class="blo">订单详情</navigator>
      <navigator url="/pages/order/particulars/particulars?id={{item.id}}" style="{{type==3&&'display:none'}}" class="{{type==1?'redb':type==2&&'db'}}">订单进度</navigator>
      <navigator url="/pages/master/masterinfo/masterinfo?id={{item.id}}&type=2" style="{{type==3&&'display:none'}}" class="blo">复尺详情</navigator>
    </view>
  </view>
  
  <view class="pad" style="display:flex">
    <text style="font-size:14px;flex:1;color:#999;">待结算收入</text> <text style="color:#000;text-align: right;font-size:18px;font-weight:bold;">+{{item.yxMoney}}</text><text></text>
  </view>
</view>
<view style="height:40rpx;"></view>