/* pages/broadcast/broadcastList.wxss */

.contain {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.bitem {
  display: flex;
  justify-content: space-between;
  line-height: 30rpx;
  border-bottom: 2rpx solid #e6212a;
  padding: 20rpx;
}

.live_box {
  flex: auto;
  margin: 20rpx;
}

.live_img image {
  border-radius: 20rpx;
  width: 100%;
  max-height: 360rpx;
}

.live_info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 20rpx;
}

.live_bot {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}
