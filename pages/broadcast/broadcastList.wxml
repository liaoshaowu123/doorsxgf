<wxs src="../../utils/my.wxs" module="tools"/>
<view class='page'>
  <view class="contain">
    <view class="bitem" bindtap="gotoRoom" data-id="{{item.roomid}}" wx:for="{{liveList}}" wx:key="id">
      <view class="live_box">
        <view class="live_img"><image src="{{item.cover_img}}"></image></view>
          <view  class="live_info">
            <view class="title">{{item.anchor_name}}</view>
            <view class="live_bot">
              <view class="time">{{tools.dateTimeFormat(item.end_time)}}</view>
              <view>{{statusArr[item.live_status]}}</view>  
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
