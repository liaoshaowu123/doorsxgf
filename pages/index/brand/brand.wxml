<view class="contain">
<!-- 铝材 -->
<view class='box-title '>选择铝材品牌
  <view class="row_s" style="flex: auto;padding-left: 5px;">
    <view class="hbar"></view><text>系列</text>
    <view class="hbar"></view><text>色彩</text>
  </view>
</view>
<view class='list row_s list3'>
