    <view class='{{index==lcIndex?"list-box2 row_c":"list-box row_c"}}' data-index='{{index}}' catchtap='onChangeLc'>{{item.name}}</view>
  </view>
</view>
<view class='box' >
  <view class='debox col_c'>
    <view class='debox-xl row_s warp'>
      <view class='debox-title'>系列选择</view>
      <view class='r-box row_s' style="display: block;">
        <view class='row_b' wx:for='{{lclist[lcIndex].seriesList}}' 
          wx:for-item='v' wx:for-index='i' >
          <view class="row_s">
            <view class="hbar"></view>
            <!-- style="font-size:20rpx;" -->
            <view  class='{{lcIndex1==i?"debox-xl1 row_c":"debox-xl2 row_c"}}'
            data-index='{{i}}' catchtap='onChangeLcXl'>{{v.name}}</view>
          </view>
          <view class="row_c" style="flex:auto"><view class="hbar"></view></view>
          <view style="font-size:24rpx;width:150rpx;" class='debox-txt row_c'>
            <text class="italic">￥</text>
            <text class="b">{{(v.price)}}</text>
            <text>元/米</text>
          </view>
          <!-- <view style="font-size:20rpx;" class='debox-txt'>市场价:￥{{(v.price)}}元/米</view>
          <view style="font-size:20rpx;" class='debox-txt'>团购价:￥{{(v.pricesc)}}元/米</view> -->
        </view>
        
      </view>
    </view>
  </view>

<!-- botbox -->
  <view class='debox col_c'>
    <view class='debox-xl row_s warp'>
      <view class='r-box row_a' style="margin: 0;">
        <view class='debox-title' style="margin:0rpx;align-self: center;">色彩选择</view>
        <view class="cbox" wx:for='{{lclist[lcIndex].colorsList}}'>
          <view class="hbar"></view>
          <view class='{{lcColorIndex==index?"ys-box1 row_c":"ys-box row_c"}}' data-index='{{index}}' catchtap='onChangeLcColor'>
          <!-- <view class='color' style='background:{{item.code}}'></view> -->
          <view class='debox-txt1'>{{item.name}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class='botbox '>
  <!-- row_b -->
    <view class='botbox-btn row_c' data-type='0' data-id='{{lclist[lcIndex].id}}' catchtap='onContent'>产品详情</view>
    <view class="hbar"></view>
    <view>
      <view class='botbox-title'>
        <text class="b f11">铝材总价：</text>
        <text class="s">{{info.lvcai}} X {{lcdjPrice}} = </text>
        <text class="money">{{lcPrice}}</text>
        <text class="b">元</text>
      </view>
      <!-- <view class='botbox-title'>市场总价：{{info.lvcai}} X {{lcdjPricesc}} = <text class="money">{{lcPricesc}}</text>元</view>
      <view class='botbox-title'>团购总价：{{info.lvcai}} X {{lcdjPrice}} = <text class="money">{{lcPrice}}</text>元</view> -->
    </view>
  </view>
</view>
